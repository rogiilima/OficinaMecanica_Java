<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PagamentoController">

    <Label text="Registro de Pagamento" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
        <Label style="-fx-font-weight: bold;" text="Valor Total:" />
        <Label fx:id="lblValorTotal" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="R$ 0,00" />
    </VBox>

    <VBox spacing="5">
        <Label style="-fx-font-weight: bold;" text="Forma de Pagamento:" />
        <ComboBox fx:id="comboFormaPagamento" prefWidth="250.0" promptText="Selecione..." />
    </VBox>

    <Button onAction="#confirmarPagamento" prefWidth="250.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10;" text="Confirmar Pagamento" />

</VBox>