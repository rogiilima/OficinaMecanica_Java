<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CriarOrdemServicoController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                <Button onAction="#voltar" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="← Voltar" />
                <Label text="Nova Ordem de Serviço" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30;">

                <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="1. Selecione o Cliente e Veículo" />

                    <HBox spacing="15">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-weight: bold;" text="Cliente:" />
                            <ComboBox fx:id="comboCliente" maxWidth="Infinity" onAction="#carregarVeiculos" promptText="Selecione o cliente" />
                        </VBox>

                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-weight: bold;" text="Veículo:" />
                            <ComboBox fx:id="comboVeiculo" maxWidth="Infinity" promptText="Selecione o veículo" />
                        </VBox>
                    </HBox>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="2. Descrição do Serviço" />

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Descrição detalhada:" />
                        <TextArea fx:id="txtDescricao" prefHeight="80.0" promptText="Ex: Revisão dos 10.000km, troca de óleo e filtros..." wrapText="true" />
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Valor da Mão de Obra (R$):" />
                        <TextField fx:id="txtMaoObra" prefWidth="200.0" promptText="0.00" />
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Status:" />
                        <ComboBox fx:id="comboStatus" prefWidth="250.0" promptText="Selecione o status" />
                    </VBox>
                </VBox>

                <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="3. Adicionar Peças (Opcional)" />

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <VBox spacing="5">
                            <Label style="-fx-font-weight: bold;" text="Peça:" />
                            <ComboBox fx:id="comboPeca" prefWidth="300.0" promptText="Selecione a peça" />
                        </VBox>

                        <VBox spacing="5">
                            <Label style="-fx-font-weight: bold;" text="Quantidade:" />
                            <TextField fx:id="txtQuantidade" prefWidth="80.0" promptText="1" />
                        </VBox>

                        <VBox spacing="5">
                            <Label text=" " />
                            <Button onAction="#adicionarPeca" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="+ Adicionar Peça" />
                        </VBox>
                    </HBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Peças Adicionadas:" />
                        <TableView fx:id="tabelaPecas" prefHeight="150.0">
                            <columns>
                                <TableColumn fx:id="colPecaNome" prefWidth="250.0" text="Peça" />
                                <TableColumn fx:id="colPecaQtd" prefWidth="100.0" text="Quantidade" />
                                <TableColumn fx:id="colPecaPreco" prefWidth="120.0" text="Preço Unit." />
                                <TableColumn fx:id="colPecaTotal" prefWidth="120.0" text="Total" />
                            </columns>
                        </TableView>
                        <Button onAction="#removerPeca" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Remover Peça Selecionada" />
                    </VBox>
                </VBox>

                <Separator />

                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox spacing="5" style="-fx-background-color: #d5dbdb; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="RESUMO DO SERVIÇO" />
                        <HBox spacing="10">
                            <Label text="Mão de Obra:" />
                            <Label fx:id="lblMaoObra" style="-fx-font-weight: bold;" text="R$ 0,00" />
                        </HBox>
                        <HBox spacing="10">
                            <Label text="Peças:" />
                            <Label fx:id="lblPecas" style="-fx-font-weight: bold;" text="R$ 0,00" />
                        </HBox>
                        <Separator />
                        <HBox spacing="10">
                            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="TOTAL:" />
                            <Label fx:id="lblTotal" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="R$ 0,00" />
                        </HBox>
                    </VBox>

                    <HBox alignment="CENTER_RIGHT" spacing="15" HBox.hgrow="ALWAYS">
                        <Button onAction="#criarOrdem" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12;" text="Criar Ordem" />
                        <Button onAction="#voltar" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 12;" text="Cancelar" />
                    </HBox>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>