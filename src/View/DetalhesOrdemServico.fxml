<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ScrollPane?>
<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DetalhesOrdemServicoController">

    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
                <Button onAction="#voltar" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="← Voltar" />
                <Label fx:id="lblTitulo" text="Detalhes da Ordem de Serviço #" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
        <VBox spacing="20" style="-fx-background-color: white; -fx-padding: 30;">

            <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Informações do Serviço" />

                <HBox spacing="30">
                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Veículo:" />
                        <Label fx:id="lblVeiculo" style="-fx-font-size: 14;" text="-" />
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Cliente:" />
                        <Label fx:id="lblCliente" style="-fx-font-size: 14;" text="-" />
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Data Abertura:" />
                        <Label fx:id="lblDataAbertura" style="-fx-font-size: 14;" text="-" />
                    </VBox>

                    <VBox spacing="5">
                        <Label style="-fx-font-weight: bold;" text="Data Conclusão:" />
                        <Label fx:id="lblDataFinalizacao" style="-fx-font-size: 14;" text="-" />
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Descrição do Serviço:" />
                    <Label fx:id="lblDescricao" style="-fx-font-size: 14;" text="-" wrapText="true" />
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label style="-fx-font-weight: bold;" text="Status:" />
                    <ComboBox fx:id="comboStatus" prefWidth="200.0" />
                    <Button onAction="#atualizarStatus" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Atualizar Status" />
                    <Button onAction="#realizarPagamento" style="-fx-background-color: #00FF00; -fx-text-fill: white;" text="Realizar Pagamento" />                </HBox>
            </VBox>

            <!-- Peças Utilizadas -->
            <VBox spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Peças Utilizadas" />

                <TableView fx:id="tabelaPecas" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="colPecaNome" prefWidth="300.0" text="Peça" />
                        <TableColumn fx:id="colQuantidade" prefWidth="100.0" text="Quantidade" />
                        <TableColumn fx:id="colPrecoUnit" prefWidth="120.0" text="Preço Unit." />
                        <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total" />
                    </columns>
                </TableView>
            </VBox>

            <Separator />

            <!-- Valores -->
            <VBox spacing="10" style="-fx-background-color: #d5dbdb; -fx-padding: 20; -fx-background-radius: 10;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="RESUMO FINANCEIRO" />

                <HBox spacing="15">
                    <Label style="-fx-font-size: 14;" text="Mão de Obra:" />
                    <Label fx:id="lblMaoObra" style="-fx-font-size: 14; -fx-font-weight: bold;" text="R$ 0,00" />
                </HBox>

                <HBox spacing="15">
                    <Label style="-fx-font-size: 14;" text="Peças:" />
                    <Label fx:id="lblTotalPecas" style="-fx-font-size: 14; -fx-font-weight: bold;" text="R$ 0,00" />
                </HBox>

                <Separator />

                <HBox spacing="15">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="TOTAL:" />
                    <Label fx:id="lblValorTotal" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="R$ 0,00" />
                </HBox>
            </VBox>

            <!-- Botões -->
            <HBox alignment="CENTER" spacing="15">
                <Button onAction="#voltar" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 10;" text="Voltar" />
            </HBox>

        </VBox>
        </ScrollPane>
    </center>

</BorderPane>